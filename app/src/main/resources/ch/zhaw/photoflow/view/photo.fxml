<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>

<AnchorPane prefWidth="250" styleClass="light-background" fx:controller="ch.zhaw.photoflow.controller.PhotoController" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
	<VBox spacing="50" fillWidth="true" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
		<padding><Insets top="10" left="10" bottom="10" right="10"/></padding>
		<children>
			<Label fx:id="filePathLabel" text="" wrapText="true"/>
			<Label fx:id="fileSizeLabel" text="" wrapText="true"/>
			<Label fx:id="metadataLabel" text="" wrapText="true"/>

			<HBox spacing="25" alignment="CENTER">
				<children>
					<Button fx:id="flagButton" text="Flag" minWidth="75"/>
					<Button fx:id="discardButton" text="Discard" minWidth="75"/>
				</children>
			</HBox>
		</children>
	</VBox>
</AnchorPane>
