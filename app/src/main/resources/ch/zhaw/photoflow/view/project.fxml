<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<?import ch.zhaw.photoflow.controller.PhotoController ?>
<?import javafx.geometry.Insets?>


<fx:root type="javafx.scene.layout.BorderPane" xmlns:fx="http://javafx.com/fxml">
	<top>
		<Pane fx:id="projectPane" style="-fx-border-style: solid;" prefHeight="75">
			<children>
				<TextField fx:id="projectNameField" layoutX="20.0" layoutY="27.0" text="Project Name" />
				<Label fx:id="newLabel" layoutX="200.0" layoutY="31.0" prefWidth="45" text="New" />
				<Label fx:id="importLabel" layoutX="240.0" layoutY="31.0" prefWidth="45" text="Import" />
				<Label fx:id="editLabel" layoutX="295.0" layoutY="31.0" prefWidth="45" text="Edit" />
				<Label fx:id="exportLabel" layoutX="330.0" layoutY="31.0" prefWidth="45" text="Export" />
				<Button fx:id="importPhotoButton" layoutX="400.0" layoutY="27.0" prefWidth="110" mnemonicParsing="false"  text="Import Photo"/>
				<MenuButton fx:id="todoButton" layoutX="580.0" layoutY="27.0" mnemonicParsing="false" prefHeight="13.0" prefWidth="112.0" text="TODO's">
					<items>
						<MenuItem mnemonicParsing="false" text="Action 1" />
						<MenuItem mnemonicParsing="false" text="Action 2" />
					</items>
				</MenuButton>
				<Button fx:id="workflowBackButton" layoutX="730.0" layoutY="27.0" prefWidth="70" mnemonicParsing="false" text="Back" />
				<Button fx:id="workflowPauseButton" layoutX="800" layoutY="27.0" prefWidth="70" mnemonicParsing="false"  text="Pause"/>
				<Button fx:id="workflowNextButton" layoutX="870.0" layoutY="27.0" prefWidth="70" mnemonicParsing="false" text="Next" />
				<Button fx:id="archiveProjectButton" layoutX="970.0" layoutY="27.0" prefWidth="70" mnemonicParsing="false" text="Archive" />
				<Button fx:id="exportProjectButton" layoutX="1040.0" layoutY="27.0" prefWidth="70" mnemonicParsing="false" text="Export" />
			</children>
		</Pane>
	</top>
	<center>
		<ScrollPane hbarPolicy="NEVER" fitToWidth="true">
			<!-- <TilePane fx:id="photosPane" layoutY="75.0" prefHeight="725" prefWidth="936.0" minHeight="-Infinity" style="-fx-border-style: solid;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" /> -->
			<content>
				<TilePane fx:id="photosPane" alignment="TOP_LEFT" tileAlignment="CENTER" hgap="25" vgap="25">
					<padding><Insets top="25" left="25" bottom="25" right="25"/></padding>
				</TilePane>
			</content>
		</ScrollPane>
	</center>
	<right>
		<PhotoController fx:id="PhotoPane" maxWidth="250"/>
	</right>
</fx:root>
