<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<BorderPane fx:controller="ch.zhaw.photoflow.controller.ProjectController" stylesheets="@photo-flow.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
	<top>
		<Pane prefHeight="75" styleClass="light-background">
			<children>
				<TextField fx:id="projectNameField" layoutX="20.0" layoutY="27.0" text="Project Name" />
				<Button fx:id="newButton" styleClass="workflowButton" layoutX="250.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="New" layoutX="257.0" layoutY="55.0" />
				<Pane styleClass="separator" layoutX="295.0" layoutY="29.0" prefWidth="70" prefHeight="4" ></Pane>
				<Button fx:id="importButton" styleClass="workflowButton" layoutX="370.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="Import" layoutX="372.0" layoutY="55.0" />
				<Pane styleClass="separator" layoutX="415.0" layoutY="29.0" prefWidth="70" prefHeight="4" ></Pane>
				<Button fx:id="editButton" styleClass="workflowButton" layoutX="490.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="Edit" layoutX="499.0" layoutY="55.0" />
				<Pane styleClass="separator" layoutX="535.0" layoutY="29.0" prefWidth="70" prefHeight="4" ></Pane>
				<Button fx:id="archiveButton" styleClass="workflowButton" layoutX="610.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="Archive" layoutX="612.0" layoutY="55.0" />
				<Button fx:id="importPhotoButton" layoutX="750.0" layoutY="27.0" prefWidth="45" mnemonicParsing="false"/>
				<MenuButton fx:id="todoButton" layoutX="850.0" layoutY="27.0" mnemonicParsing="false" prefHeight="13.0" prefWidth="80.0" text="TODO's">
					<items>
						<MenuItem mnemonicParsing="false" text="Action 1" />
						<MenuItem mnemonicParsing="false" text="Action 2" />
					</items>
				</MenuButton>
				<Button fx:id="archiveProjectButton" layoutX="970.0" layoutY="27.0" prefWidth="45" mnemonicParsing="false"/>
				<Button fx:id="exportProjectButton" layoutX="1040.0" layoutY="27.0" prefWidth="45" mnemonicParsing="false"/>
			</children>
		</Pane>
	</top>
	<center>
		<ScrollPane hbarPolicy="NEVER" fitToWidth="true" style="-fx-box-border: transparent; -fx-focus-color: transparent;">
			<content>
				<TilePane fx:id="photosPane" alignment="TOP_LEFT" tileAlignment="CENTER" hgap="25" vgap="25">
					<padding><Insets top="25" left="25" bottom="25" right="25"/></padding>
				</TilePane>
			</content>
		</ScrollPane>
	</center>
	<right>
		<fx:include fx:id="photo" source="photo.fxml"/>
	</right>
</BorderPane>
