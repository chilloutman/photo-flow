<BorderPane fx:controller="ch.zhaw.photoflow.controller.ProjectController" stylesheets="@photo-flow.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8">
	<top>
		<Pane prefHeight="75" styleClass="light-background">
			<children>
				<TextField fx:id="projectNameField" layoutX="20.0" layoutY="27.0" text="Project Name" />
				<Button fx:id="newButton" styleClass="workflowButtonRed" layoutX="250.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="New" layoutX="257.0" layoutY="55.0" />
				<Pane fx:id="separatorOne" styleClass="separator" layoutX="295.0" layoutY="29.0" prefWidth="70" prefHeight="4" ></Pane>
				<Button fx:id="importButton" styleClass="workflowButtonRed" layoutX="370.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="Import" layoutX="372.0" layoutY="55.0" />
				<Pane fx:id="separatorTwo" styleClass="separator" layoutX="415.0" layoutY="29.0" prefWidth="70" prefHeight="4" ></Pane>
				<Button fx:id="editButton" styleClass="workflowButtonRed" layoutX="490.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="Edit" layoutX="499.0" layoutY="55.0" />
				<Pane fx:id="separatorThree" styleClass="separator" layoutX="535.0" layoutY="29.0" prefWidth="70" prefHeight="4" ></Pane>
				<Button fx:id="finishButton" styleClass="workflowButtonRed" layoutX="610.0" layoutY="10.0" prefWidth="40" prefHeight="40" mnemonicParsing="false"  text=""/>
				<Label text="Finish" layoutX="612.0" layoutY="55.0" />
				
				<Button fx:id="importPhotoButton" layoutX="700.0" layoutY="27.0" prefWidth="45" mnemonicParsing="false"/>
				<Pane fx:id="todoCheckComboBoxPane" layoutX="760.0" layoutY="27.0" prefHeight="13.0" prefWidth="120.0" />
				<Button fx:id="archiveProjectButton" layoutX="960.0" layoutY="27.0" prefWidth="45" mnemonicParsing="false"/>
				<Button fx:id="exportProjectButton" layoutX="1030.0" layoutY="27.0" prefWidth="45" mnemonicParsing="false"/>
			</children>
		</Pane>
	</top>
	<center>
		<ScrollPane hbarPolicy="NEVER" fitToWidth="true" style="-fx-box-border: transparent; -fx-focus-color: transparent;">
			<content>
				<TilePane fx:id="photosPane" alignment="TOP_LEFT" tileAlignment="CENTER" hgap="25" vgap="25">
					<padding><Insets top="25" left="25" bottom="25" right="25"/></padding>
				</TilePane>
			</content>
		</ScrollPane>
	</center>
	<right>
		<fx:include fx:id="photo" source="photo.fxml"/>
	</right>
</BorderPane>
